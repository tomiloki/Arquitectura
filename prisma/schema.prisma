generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"  // Usamos SQLite para desarrollo
  url      = env("DATABASE_URL")  // Conectamos usando la URL definida en el .env
}

model Product {
  id    Int     @id @default(autoincrement())  // Autoincrement para la clave primaria
  name  String
  price Float
  createdAt DateTime @default(now())  // Fecha automática de creación
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}


